<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginBottom="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/news_list_card_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:background="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/news_list_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="新闻"
                android:textColor="#848484"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/news_list_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/news_list_card_title"
                android:text="time"
                android:textColor="#c6c6c6"
                android:layout_marginTop="3dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/news_list_card_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/news_list_card_time"
                android:text="timetimetimetimetimetimetimetimetimetimetimetimetimetimetimetimetime"
                android:textColor="#848484"
                android:layout_marginTop="3dp"
                android:textSize="15sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>